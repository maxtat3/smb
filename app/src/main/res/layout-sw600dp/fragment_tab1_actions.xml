<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/actions_gridLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="10"
        android:background="@drawable/background_portrait"
        >


    <!--1. Баланс-->
    <ImageButton
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/btnBalance"
            android:layout_gravity="center"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="150dp"
            android:background="@android:color/transparent"
            />
    <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="125dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:id="@+id/txtBalance"/>



    <!--2. Поплнение моб. тел.-->
    <ImageButton
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="150dp"
            android:id="@+id/btnReplMobTel"
            android:background="@null"
            />
    <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:id="@+id/txtReplMobTel"/>
    <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="@string/mob"/>


    <!--3. Блокировать карту-->
    <ImageButton
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/btnBlockCard"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="125dp"
            android:background="@null"/>
    <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="125dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:id="@+id/txtBlockCard"/>
    <TextView
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="125dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="@string/card"/>


    <!--4. Разблокировать карту-->
    <ImageButton
            android:layout_row="3"
            android:layout_column="1"
            android:id="@+id/btnUnblockCard"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="90dp"
            android:layout_gravity="center"
            android:background="@null"/>
    <TextView
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:id="@+id/txtUnblockCard"/>
    <TextView
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="@string/card"/>


    <!--5. Перевести деньни на другую карту-->
    <ImageButton
            android:layout_row="6"
            android:layout_column="0"
            android:id="@+id/btnMoneyTransfer"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="75dp"
            android:layout_gravity="center"
            android:background="@null"/>
    <TextView
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginLeft="125dp"
            android:id="@+id/txtMoneyTransfer"/>
    <TextView
            android:layout_row="8"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="125dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="@string/money"/>


</GridLayout>


