<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/actions_gridLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="7"
        android:background="@drawable/background"
        >


    <!--1. Баланс-->
    <ImageButton
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/btnBalance"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            />
    <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:id="@+id/txtBalance"/>


    <!--2. Поплнение моб. тел.-->
    <ImageButton
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:id="@+id/btnReplMobTel"
            android:background="@null"
            />
    <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:id="@+id/txtReplMobTel"/>
    <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:text="@string/mob"/>


    <!--3. Блокировать карту-->
    <ImageButton
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/btnBlockCard"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@null"/>
    <TextView
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:id="@+id/txtBlockCard"/>
    <TextView
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:text="@string/card"/>

    <!--4. Разблокировать карту-->
    <ImageButton
            android:layout_row="3"
            android:layout_column="0"
            android:id="@+id/btnUnblockCard"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@null"/>
    <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:id="@+id/txtUnblockCard"/>
    <TextView
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:text="@string/card"/>




    <!--5. Перевести деньни на другую карту-->
    <ImageButton
            android:layout_row="3"
            android:layout_column="1"
            android:id="@+id/btnMoneyTransfer"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@null"/>
    <TextView
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:id="@+id/txtMoneyTransfer"/>
    <TextView
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:text="@string/money"/>


</GridLayout>


