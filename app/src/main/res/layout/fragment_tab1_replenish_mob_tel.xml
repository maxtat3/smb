<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@drawable/background_portrait"
		>


	<!--<TextView -->
			<!--android:layout_width="match_parent" -->
			<!--android:layout_height="wrap_content"-->
			<!--android:text="Введите номер телефона"-->
			<!--android:gravity="center_horizontal"-->
			<!--/>-->

	<EditText
			android:id="@+id/editTextPhoneNumber"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="phone"
			android:ems="10"
			android:hint="Введите номер телефона"
			android:textSize="22sp"
			/>


	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>

		<Button
				android:id="@+id/btnFromPhoneBook"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Из контактов"
				android:textSize="22sp"
				android:layout_weight="1"
				/>

		<Button
				android:id="@+id/btnMyPhoneNumber"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Мой номер"
				android:textSize="22sp"
				android:layout_weight="2"
				/>

	</LinearLayout>


	<EditText
			android:id="@+id/editTextSum"
			android:layout_marginTop="12dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="numberSigned"
			android:ems="10"
			android:hint="Введите сумму пополнения"
			android:textSize="22sp"
			/>


	<Button
			android:id="@+id/btnGoReplenishMobTel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:layout_gravity="center_horizontal"
			android:text="Пополнить"
			android:textSize="22sp"
			android:textStyle="bold"
			/>

</LinearLayout>