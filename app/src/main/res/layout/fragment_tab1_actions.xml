<?xml version="1.0" encoding="utf-8"?>

<GridLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/actions_gridLay"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:columnCount="4"
		android:rowCount="10"
		android:background="@drawable/background_portrait"
		>


	<!--1. Баланс-->
	<ImageButton
			android:id="@+id/btnBalance"
			android:layout_row="0"
			android:layout_column="0"
			android:layout_gravity="center"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="20dp"
			android:background="@android:color/transparent"
			/>
	<TextView
			android:layout_row="1"
			android:layout_column="0"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp"
			android:textSize="12dp"
			android:id="@+id/txtBalance"
			/>



	<!--2. Поплнение моб. тел.-->
	<ImageButton
			android:id="@+id/btnReplMobTel"
			android:layout_row="0"
			android:layout_column="1"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
			android:background="@null"
			/>
	<TextView
			android:id="@+id/txtReplMobTel"
			android:layout_row="1"
			android:layout_column="1"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp"
			android:textSize="12dp"
			/>
	<TextView
			android:layout_row="2"
			android:layout_column="1"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp"
			android:textSize="12dp"
			android:text="@string/mob"
			/>


	<!--3. Блокировать карту-->
	<ImageButton
			android:id="@+id/btnBlockCard"
			android:layout_row="0"
			android:layout_column="2"
			android:layout_gravity="center"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="20dp"
			android:background="@null"
			/>
	<TextView
			android:id="@+id/txtBlockCard"
			android:layout_row="1"
			android:layout_column="2"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp"
			android:textSize="12dp"
			/>
	<TextView
			android:layout_row="2"
			android:layout_column="2"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp"
			android:textSize="12dp"
			android:text="@string/card"
			/>


	<!--4. Разблокировать карту-->
	<ImageButton
			android:id="@+id/btnUnblockCard"
			android:layout_row="3"
			android:layout_column="0"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="20dp"
			android:layout_gravity="center"
			android:background="@null"
			/>
	<TextView
			android:id="@+id/txtUnblockCard"
			android:layout_row="4"
			android:layout_column="0"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp"
			android:textSize="12dp"
			/>
	<TextView
			android:layout_row="5"
			android:layout_column="0"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp"
			android:textSize="12dp"
			android:text="@string/card"
			/>


	<!--5. Перевести деньни на другую карту-->
	<ImageButton
			android:id="@+id/btnMoneyTransfer"
			android:layout_row="3"
			android:layout_column="1"
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
			android:layout_gravity="center"
			android:background="@null"
			/>
	<TextView
			android:id="@+id/txtMoneyTransfer"
			android:layout_row="4"
			android:layout_column="1"
			android:layout_gravity="center"
			android:textSize="12dp"
			android:layout_marginLeft="20dp"
			/>
	<TextView
			android:layout_row="5"
			android:layout_column="1"
			android:layout_gravity="center"
			android:layout_marginLeft="20dp"
			android:textSize="12dp"
			android:text="@string/money"
			/>


</GridLayout>


